<h1> <%= @list.name %></h1>
<%= cl_image_tag @list.img.key, height: 300, width: 400, crop: :fill %>
<h2>Films:</h2>
<ul>
  <% @list.movies.each do |movie| %>
    <li><%= movie.title %></li>
  <% end %>
</ul>

<h2>Reviews:</h2>
<ul>
  <% @list.reviews.each do |review| %>
    <li><%= review.comment %> <%= link_to "Delete this review", review_path(review), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this review?"} %>
</li>
  <% end %>
</ul>

<%= link_to "Add a review to this list", new_list_review_path(@list.id) %>
<%= link_to "Add a bookmark to this list", new_list_bookmark_path(@list.id) %>
<%= link_to "back to list index", lists_path %>
